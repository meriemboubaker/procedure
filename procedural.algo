FUNCTION Dot_product(n:INTEGER ,v1,v2 : ARRAY[n]) : FLOAT
VAR
 i:INTEGER:= 0;   
BEGIN
 ps:= 0;
FOR i FROM 0 TO v1.length-1 DO
 ps := ps + v1[i] * v2[i]
END_FOR
    RETURN ps ;
END
