PROCEDURE Dot_product(VAR ps:FLOAT,n : INTEGER , v1,v2 : ARRAY[n])
VAR
 i:INTEGER:= 0;    
BEGIN
 ps:= 0;
 FOR i FROM 0 TO n-1 DO
  ps := ps + v1[i] * v2[i]
 END_FOR
END
